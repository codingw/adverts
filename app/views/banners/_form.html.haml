#form_banner
  - if @banner.errors.present?
    .error_container
      %h2
        = pluralize(@banner.errors.count, "error")
        prohibited this banner from being saved
      %ul
        - @banner.errors.full_messages.each do |message|
          %li= message
    
  = form_for @banner , :html => {:multipart => true} do |f|
    %table
      %tr
        %td= f.label :nama
        %td :
        %td= f.text_field :name
      %tr
        %td= f.label :email
        %td :
        %td= f.text_field :email
      %tr
        %td= f.label :telepon
        %td :
        %td= f.text_field :phone
      %tr
        %td= f.label :kategori
        %td :
        %td= f.collection_select :banner_category_id, BannerCategory.all, :id, :name
      %tr
        %td= f.label :lama_pemasangan
        %td :
        %td
          %select{:name => "banner[how_long]", :id => :banner_how_long}
            - 12.times do |i|
              %option{:value => (i+1)}= "#{i + 1} Bulan"
      %tr
        %td= f.label :website
        %td :
        %td= f.text_field :site
      %tr
        %td= f.label :isi
        %td :
        %td= f.text_area :content, :cols => 45, :rows => 5
      %tr
        %td= f.label :gambar
        %td :
        %td= f.file_field :image
      %tr
        %td
        %td
        %td= f.submit "Submit"